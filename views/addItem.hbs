<!-- views/addItem.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- Latest compiled and minified Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
        crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/main.css" />

    <title>Add Item</title>
</head>

<body>
    <div class="container my-5" style="padding-top: 90px;">
        <div class="row">
            <section class="col-md-8 mx-auto">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Add New Item</h3>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/items/add" enctype="multipart/form-data">
                            <fieldset>
                                <legend>Feature Image</legend>
                                <div class="mb-3">
                                    <label for="featureImage" class="form-label">Upload Feature
                                        Image:</label>
                                    <input class="form-control" id="featureImage" name="featureImage" type="file"
                                        aria-label="Feature Image" required />
                                </div>
                            </fieldset>

                            <fieldset>
                                <legend>Item Details</legend>
                                <div class="mb-3">
                                    <label for="title" class="form-label">Item Name:</label>
                                    <input class="form-control" id="title" name="title" type="text"
                                        aria-label="Item Name" required />
                                </div>
                                <div class="mb-3">
                                    <label for="price" class="form-label">Price:</label>
                                    <input class="form-control" id="price" name="price" type="text" aria-label="Price"
                                        required />
                                </div>
                                <div class="mb-3">
                                    <label for="body" class="form-label">Description:</label>
                                    <textarea class="form-control" id="body" name="body" rows="5"
                                        aria-label="Description" required></textarea>
                                </div>
                            </fieldset>

                            <fieldset>
                                <legend>Category & Visibility</legend>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="category" class="form-label">Category:</label>
                                        {{#if categories}}
                                        <select class="form-control" name="category" id="category"
                                            aria-label="Category" required>
                                            <option value="">Select Category</option>
                                            {{#each categories}}
                                            <option value="{{id}}">{{category}}</option>
                                            {{/each}}
                                        </select>
                                        {{else}}
                                        <div>No Categories</div>
                                        {{/if}}
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="published" class="form-label">Visibility:</label>
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input" name="published"
                                                id="published" />
                                            <label class="form-check-label" for="published">Published</label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>

                            <div class="d-flex justify-content-end mt-4">
                                <button type="submit" class="btn btn-success btn-lg">Add Item</button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
</body>

</html>