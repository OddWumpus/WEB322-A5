<h2>Items <a href="/items/add" class="btn btn-success pull-right">Add Item</a></h2>
{{#if items}}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Item ID</th>
            <th scope="col">Title</th>
            <th scope="col">Item Date</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Published</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each items}}
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{title}}</td>
            <td>{{formatDate itemDate}}</td>
            <td>${{price}}</td>
            <td>
                {{#if Category}}
                    <a href="/items?category={{Category.id}}">{{Category.category}}</a>
                {{else}}
                    Uncategorized
                {{/if}}
            </td>
            <td>{{#if published}}Yes{{else}}No{{/if}}</td>
            <td><a href="/items/delete/{{id}}" class="btn btn-danger">remove</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="alert alert-warning">
    <strong>No items found</strong>
</div>
{{/if}}